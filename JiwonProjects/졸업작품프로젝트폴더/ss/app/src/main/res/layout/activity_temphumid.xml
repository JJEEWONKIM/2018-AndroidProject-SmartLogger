<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainRootLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/root_calling_gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <ImageView
            android:id="@+id/dog"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/smallicon" />


        <ImageView
            android:id="@+id/returnBtn"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/dog"
            android:layout_marginStart="20dp"

            android:src="@drawable/returncircle" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/hopeTempIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/hopetempicon"/>
            <TextView
                android:id="@+id/hopeTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="희망 온도 : "/>

            <ImageView
                android:id="@+id/Velocity"
                android:layout_marginTop="29dp"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/eachtemphumidicon" />


            <TextView
                android:id="@+id/clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/Velocity"
                android:layout_alignRight="@id/Velocity"
                android:translationY="140dp"
                android:layout_margin="1dp"
                android:gravity="center_horizontal"

                android:text="   0  "
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:textStyle="bold"
                android:typeface="sans" />
            <ImageView
                android:id="@+id/cleanWhat"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignLeft="@id/Velocity"
                android:layout_alignRight="@id/Velocity"
                android:layout_marginTop="55dp"
                android:layout_margin="1dp"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/Velocity"
                android:src="@drawable/sleepy"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tiptemp"
                android:layout_toLeftOf="@+id/recomBest"
                />
            <TextView
                android:id="@+id/recomBest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:text="fewfewfewfwefewfewfewf틀어라!"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout4"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/temperature"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/temperaturevalue" />


                <TextView
                    android:id="@+id/temperaturevalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/temperature"
                    android:layout_alignRight="@id/temperature"
                    android:layout_marginStart="50dp"
                    android:layout_margin="1dp"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:text="          23"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:typeface="sans" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout5"
                android:layout_width="180dp"
                android:layout_height="80dp"

                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/humidity"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="45dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/humidityvalue" />


                <TextView
                    android:id="@+id/humidityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/humidity"
                    android:layout_alignRight="@id/humidity"
                    android:layout_marginTop="26dp"
                    android:layout_margin="1dp"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:text="          45"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:typeface="sans" />


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/heater"/>
                    <ImageView
                        android:id="@+id/switchTempHigh"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:src="@drawable/switchoff" />
                    <ImageView
                        android:id="@+id/autoBtnTempHigh"
                        android:src="@drawable/autooff"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cooler"/>
                    <ImageView
                        android:id="@+id/switchTempLow"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:src="@drawable/switchoff" />
                    <ImageView
                        android:id="@+id/autoBtnTempLow"
                        android:src="@drawable/autooff"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/humidifier"/>
                    <ImageView
                        android:id="@+id/switchHumid"
                        android:layout_width="80dp"
                        android:layout_height="34dp"
                        android:src="@drawable/switchoff" />
                    <ImageView
                        android:id="@+id/autoBtnHumid"
                        android:src="@drawable/autooff"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>