<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="#00bffe"
    >
    <TextView android:text=" 현재 비밀번호"
        android:textSize="25dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/currentPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textColor="#095cae"
        android:textSize="20dp"
        android:text=""/>
    <TextView android:text=" 새 비밀번호"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/newPW" android:layout_width="240dp"
        android:typeface="sans"
        android:textColor="#095cae"
        android:textSize="20dp"
        android:layout_height="40dp" android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />
    <TextView android:text=" 새 비밀번호 확인"
        android:textSize="25dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/newPWCheck" android:layout_width="240dp"
        android:typeface="sans"
        android:textColor="#095cae"
        android:textSize="20dp"
        android:layout_height="40dp" android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />
</LinearLayout>